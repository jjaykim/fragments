{
  "name": "fragments",
  "private": true,
  "version": "0.0.1",
  "description": "Fragments back-end API",
  "scripts": {
    "test:watch": "jest -c jest.config.ts --runInBand --watch --",
    "test": "jest -c jest.config.ts --runInBand --",
    "coverage": "jest -c jest.config.ts --runInBand --coverage",
    "lint": "eslint --config .eslintrc.json 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "build": "rimraf ./dist && tsc",
    "start": "ts-node src/index.ts",
    "start:docker": "npm run build && node dist/src/index.js",
    "dev:local": "cp ./env/.env.development ./.env && LOG_LEVEL=debug nodemon --exec ts-node src/index.ts --watch src",
    "dev:staging": "cp ./env/.env.staging ./.env && LOG_LEVEL=debug nodemon --exec ts-node src/index.ts --watch src",
    "dev:aws": "cp ./env/.env.production ./.env && LOG_LEVEL=debug nodemon --exec ts-node src/index.ts --watch src",
    "debug": "LOG_LEVEL=debug nodemon --watch src --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/index.ts "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjaykim/fragments.git"
  },
  "author": "Jungjoo Kim <jkim594@myseneca.ca>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/content-type": "^1.1.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-auth": "^4.1.1",
    "@types/jest": "^27.5.1",
    "@types/markdown-it": "^12.2.3",
    "@types/mime-types": "^2.1.1",
    "@types/passport": "^1.0.7",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/stoppable": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "aws-jwt-verify": "^2.1.3",
    "compression": "^1.7.4",
    "content-type": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "http-auth": "^4.1.9",
    "http-auth-passport": "^1.0.6",
    "markdown-it": "^13.0.1",
    "mime-types": "^2.1.35",
    "nanoid": "^3.3.4",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^7.11.0",
    "pino-http": "^7.0.0",
    "pino-pretty": "^7.6.1",
    "stoppable": "^1.1.0",
    "ts-node": "^10.7.0"
  }
}
